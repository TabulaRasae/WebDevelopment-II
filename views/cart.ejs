<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Cart | BMCC UsedBooks Store</title>
    <link href="/styles.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <div id="main">
      <%- include('partials/navigation'); %>
      <div id="content" class="content-panel">
        <div class="hh1">Shopping Cart</div>
        <% if (typeof message !== 'undefined' && message) { %>
        <div class="message-banner <%= isError ? 'error' : '' %>">
          <%= message %>
        </div>
        <% } %> <% if (cart.items.length === 0) { %>
        <p>
          Your cart is empty. Browse the <a href="/products">catalog</a> to add
          items.
        </p>
        <% } else { %>
        <table class="cart-table">
          <thead>
            <tr>
              <th>Item</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Subtotal</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% cart.items.forEach(function(item){ %>
            <tr>
              <td>
                <a href="/products/<%= item.productId %>"><%= item.name %></a>
              </td>
              <td>$<%= item.price.toFixed(2) %></td>
              <td>
                <form action="/cart/update" method="post" class="quantity-form">
                  <input
                    type="hidden"
                    name="productId"
                    value="<%= item.productId %>"
                  />
                  <input
                    type="number"
                    name="quantity"
                    min="0"
                    value="<%= item.quantity %>"
                  />
                  <button type="submit" class="link-button">update</button>
                </form>
              </td>
              <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
              <td>
                <form action="/cart/remove" method="post">
                  <input
                    type="hidden"
                    name="productId"
                    value="<%= item.productId %>"
                  />
                  <button type="submit" class="link-button">remove</button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <div class="totals">
          <p>Subtotal: $<%= totals.subtotal.toFixed(2) %></p>
          <p>Tax: $<%= totals.tax.toFixed(2) %></p>
          <p class="grand-total">
            Grand Total: $<%= totals.grandTotal.toFixed(2) %>
          </p>
        </div>
        <form action="/cart/checkout" method="post" class="checkout-form">
          <button type="submit" class="submit">Checkout</button>
        </form>
        <% } %>
      </div>
      <%- include('partials/footer'); %>
    </div>
  </body>
</html>
